
<div class="doctor-index">
    <h1>Our Doctors</h1>

    <div class="doctor-cards">
        <% @doctors.each() do |doctor| %>
            <div class="card">
                <img src=" <%= doctor.avatar %> " alt="">
                <h3> 
                    <%= "#{doctor.first_name} #{doctor.last_name}" %> 
                    <%= link_to "info", doctor_path(doctor.id), class: "link" %>    
                </h3>
            </div>
        <% end %>
    </div>
</div>